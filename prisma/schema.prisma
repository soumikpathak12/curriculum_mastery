generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                    String                      @id @default(cuid())
  email                 String                      @unique
  passwordHash          String
  name                  String?
  role                  Role                        @default(STUDENT)
  createdAt             DateTime                    @default(now())
  updatedAt             DateTime                    @updatedAt
  blocked               Boolean                     @default(false)
  enrollments           Enrollment[]
  LessonProgress        LessonProgress[]
  payments              Payment[]
  quizSubmissions       QuizSubmission[]
  submissions           Submission[]
  assignmentAssignments StudentAssignment[]
  quizAssignments       StudentQuizAssignment[]
  materialAssignments   StudentMaterialAssignment[]
}

model Course {
  id          String           @id @default(cuid())
  title       String
  slug        String           @unique
  description String?
  price       Int
  currency    String           @default("INR")
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
  assignments Assignment[]
  materials   CourseMaterial[]
  enrollments Enrollment[]
  modules     Module[]
  quizzes     Quiz[]
}

model Module {
  id        String   @id @default(cuid())
  courseId  String
  title     String
  order     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lessons   Lesson[]
  course    Course   @relation(fields: [courseId], references: [id])

  @@index([courseId])
}

model Lesson {
  id             String           @id @default(cuid())
  moduleId       String
  title          String
  order          Int
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  module         Module           @relation(fields: [moduleId], references: [id])
  LessonProgress LessonProgress[]
  resources      Resource[]

  @@index([moduleId])
}

model Resource {
  id       String       @id @default(cuid())
  lessonId String
  type     ResourceType
  fileKey  String
  filename String
  size     Int
  lesson   Lesson       @relation(fields: [lessonId], references: [id])

  @@index([lessonId])
}

model Enrollment {
  id        String           @id @default(cuid())
  userId    String
  courseId  String
  status    EnrollmentStatus @default(ACTIVE)
  paymentId String?
  createdAt DateTime         @default(now())
  course    Course           @relation(fields: [courseId], references: [id])
  payment   Payment?         @relation(fields: [paymentId], references: [id])
  user      User             @relation(fields: [userId], references: [id])

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Payment {
  id         String       @id @default(cuid())
  provider   String       @default("razorpay")
  orderId    String       @unique
  amount     Int
  currency   String       @default("INR")
  userId     String
  createdAt  DateTime     @default(now())
  enrollment Enrollment[]
  user       User         @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Assignment {
  id                 String               @id @default(cuid())
  courseId           String
  title              String
  description        String?
  dueAt              DateTime?
  createdAt          DateTime             @default(now())
  updatedAt          DateTime             @updatedAt
  course             Course               @relation(fields: [courseId], references: [id])
  resources          AssignmentResource[]
  submissions        Submission[]
  studentAssignments StudentAssignment[]

  @@index([courseId])
}

/// Assignment resources (PDF, Word files)
model AssignmentResource {
  id           String       @id @default(cuid())
  assignmentId String
  title        String
  type         ResourceType
  fileKey      String
  filename     String
  size         Int
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  assignment   Assignment   @relation(fields: [assignmentId], references: [id])

  @@index([assignmentId])
}

model Submission {
  id           String           @id @default(cuid())
  assignmentId String
  userId       String
  fileKey      String
  status       SubmissionStatus @default(SUBMITTED)
  feedback     String?
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt
  assignment   Assignment       @relation(fields: [assignmentId], references: [id])
  user         User             @relation(fields: [userId], references: [id])

  @@index([assignmentId])
  @@index([userId])
}

model Subscriber {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  tags      String?
  createdAt DateTime @default(now())
}

model NewsletterSubscriber {
  id           String   @id @default(cuid())
  email        String   @unique
  subscribedAt DateTime @default(now())
  createdAt    DateTime @default(now())
}

model ContactSubmission {
  id        String   @id @default(cuid())
  name      String
  email     String
  message   String
  createdAt DateTime @default(now())
}

model Newsletter {
  id        String           @id @default(cuid())
  title     String
  content   String
  status    NewsletterStatus @default(DRAFT)
  createdAt DateTime         @default(now())
  sentAt    DateTime?
}

/// Tracks per-user lesson completion
model LessonProgress {
  id          String   @id @default(cuid())
  userId      String
  lessonId    String
  completedAt DateTime @default(now())
  lesson      Lesson   @relation(fields: [lessonId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

/// Course materials (PDF, Word, PPT files)
model CourseMaterial {
  id                 String                      @id @default(cuid())
  courseId           String
  title              String
  type               ResourceType
  fileKey            String
  filename           String
  size               Int
  createdAt          DateTime                    @default(now())
  updatedAt          DateTime                    @updatedAt
  course             Course                      @relation(fields: [courseId], references: [id])
  studentAssignments StudentMaterialAssignment[]

  @@index([courseId])
}

/// Quiz system
model Quiz {
  id                 String                  @id @default(cuid())
  courseId           String
  title              String
  description        String?
  dueAt              DateTime?
  createdAt          DateTime                @default(now())
  updatedAt          DateTime                @updatedAt
  course             Course                  @relation(fields: [courseId], references: [id])
  questions          QuizQuestion[]
  submissions        QuizSubmission[]
  studentAssignments StudentQuizAssignment[]

  @@index([courseId])
}

/// Quiz questions (MCQ and Fill in the blanks)
model QuizQuestion {
  id            String       @id @default(cuid())
  quizId        String
  type          QuestionType
  question      String
  options       String[]
  correctAnswer String?
  order         Int
  createdAt     DateTime     @default(now())
  quiz          Quiz         @relation(fields: [quizId], references: [id])

  @@index([quizId])
}

/// Quiz submissions
model QuizSubmission {
  id          String   @id @default(cuid())
  quizId      String
  userId      String
  answers     Json
  score       Int?
  submittedAt DateTime @default(now())
  quiz        Quiz     @relation(fields: [quizId], references: [id])
  user        User     @relation(fields: [userId], references: [id])

  @@unique([quizId, userId])
  @@index([quizId])
  @@index([userId])
}

enum Role {
  ADMIN
  STUDENT
}

enum ResourceType {
  PDF
  DOC
  DOCX
  PPT
  PPTX
}

enum EnrollmentStatus {
  ACTIVE
  PENDING
  CANCELLED
}

enum SubmissionStatus {
  SUBMITTED
  REVIEWED
  REVISE
}

enum NewsletterStatus {
  DRAFT
  SENT
}

enum QuestionType {
  MCQ
  FILL_IN_BLANK
}

/// Tracks which students are assigned to which assignments
model StudentAssignment {
  id           String     @id @default(cuid())
  userId       String
  assignmentId String
  assignedAt   DateTime   @default(now())
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@unique([userId, assignmentId])
  @@index([userId])
  @@index([assignmentId])
}

/// Tracks which students are assigned to which quizzes
model StudentQuizAssignment {
  id         String   @id @default(cuid())
  userId     String
  quizId     String
  assignedAt DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  quiz       Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@unique([userId, quizId])
  @@index([userId])
  @@index([quizId])
}

/// Tracks which students are assigned to which course materials
model StudentMaterialAssignment {
  id         String         @id @default(cuid())
  userId     String
  materialId String
  assignedAt DateTime       @default(now())
  user       User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  material   CourseMaterial @relation(fields: [materialId], references: [id], onDelete: Cascade)

  @@unique([userId, materialId])
  @@index([userId])
  @@index([materialId])
}
